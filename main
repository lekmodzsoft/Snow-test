<script>
// Criar efeito de neve
function createSnowfall() {
    const snowfall = document.getElementById('snowfall');
    const snowflakeCount = 50;
    
    for (let i = 0; i < snowflakeCount; i++) {
        const snowflake = document.createElement('div');
        snowflake.classList.add('snowflake');
        
        // Tamanho aleatório
        const size = Math.random() * 5 + 3;
        snowflake.style.width = `${size}px`;
        snowflake.style.height = `${size}px`;
        
        // Posição inicial aleatória
        snowflake.style.left = `${Math.random() * 100}vw`;
        
        // Duração e atraso aleatórios da animação
        const duration = Math.random() * 10 + 10;
        const delay = Math.random() * 5;
        snowflake.style.animationDuration = `${duration}s`;
        snowflake.style.animationDelay = `${delay}s`;
        
        // Opacidade aleatória
        snowflake.style.opacity = Math.random() * 0.7 + 0.3;
        
        snowfall.appendChild(snowflake);
    }
}

// Menu hamburguer
function toggleMenu() {
    const menu = document.getElementById('menu');
    menu.style.display = (menu.style.display === "flex") ? "none" : "flex";
}

// Loader visível por 5 segundos
window.addEventListener("load", function(){
    createSnowfall();
    
    const loader = document.getElementById("loader");
    setTimeout(() => {
        loader.style.opacity = "0";
        setTimeout(() => { loader.style.display = "none"; }, 500);
    }, 5000);
});

// Like button logic
let likeCount = localStorage.getItem('likeCount') || 0;
document.getElementById('likeCount').innerText = likeCount;
document.getElementById('likeBtn').addEventListener('click', () => {
    likeCount++;
    localStorage.setItem('likeCount', likeCount);
    document.getElementById('likeCount').innerText = likeCount >= 1000 ? (likeCount/1000).toFixed(1)+'k' : likeCount;
    
    // Efeito visual ao curtir
    const btn = document.getElementById('likeBtn');
    btn.style.transform = 'scale(1.1)';
    setTimeout(() => { btn.style.transform = 'scale(1)'; }, 300);
});

// View counter logic
let viewCount = localStorage.getItem('viewCount') || 0;
viewCount++;
localStorage.setItem('viewCount', viewCount);
document.getElementById('viewCount').innerText = viewCount >= 1000 ? (viewCount/1000).toFixed(1)+'k' : viewCount;

// Modal functionality
function openModal(feature) {
    const modal = document.getElementById('infoModal');
    const title = document.getElementById('modalTitle');
    const text = document.getElementById('modalText');

    if(feature === 'crescimento') {
        title.innerText = 'Crescimento Estratégico';
        text.innerText = 'Na Snow Owl Agency, desenvolvemos estratégias personalizadas para cada host. Analisamos seu perfil, identificamos oportunidades e criamos um plano de crescimento específico. Nossas técnicas incluem otimização de horários, engajamento de audiência, colaborações estratégicas e muito mais para garantir que seu crescimento seja consistente e sustentável.';
    } else if(feature === 'contratos') {
        title.innerText = 'Contratos Protegidos';
        text.innerText = 'Nossos contratos são desenvolvidos com transparência e segurança jurídica. Cada cláusula é explicada detalhadamente, garantindo que você compreenda todos os seus direitos e obrigações. Trabalhamos com intermedição oficial com a Bigo Live, oferecendo respaldo legal completo e suporte contínuo para qualquer questão que possa surgir durante sua carreira.';
    } else if(feature === 'pagamentos') {
        title.innerText = 'Segurança e Pagamentos';
        text.innerText = 'Garantimos que todos os pagamentos sejam processados de forma segura, transparente e pontual. Utilizamos sistemas de pagamento confiáveis e fornecemos extratos detalhados de todos os seus ganhos. Nossa equipe financeira está sempre disponível para esclarecer dúvidas e garantir que você receba o valor correto na data combinada.';
    } else if(feature === 'mentoria') {
        title.innerText = 'Mentoria Especializada';
        text.innerText = 'Oferecemos mentoria individual com especialistas em performance digital. Nossos mentores trabalham com você para desenvolver suas habilidades de comunicação, criar conteúdo envolvente, construir uma marca pessoal forte e maximizar seu potencial na plataforma. É como ter um treinador pessoal para sua carreira digital!';
    }

    modal.style.display = 'flex';
    document.body.style.overflow = 'hidden'; // Impede scroll enquanto modal está aberto
}

function closeModal() {
    document.getElementById('infoModal').style.display = 'none';
    document.body.style.overflow = 'auto'; // Restaura scroll
}

// Fechar modal ao clicar fora
window.onclick = function(event) {
    const modal = document.getElementById('infoModal');
    if (event.target === modal) {
        closeModal();
    }
}

// Fechar menu ao clicar fora em mobile
document.addEventListener('click', function(event) {
    const menu = document.getElementById('menu');
    const hamburger = document.querySelector('.hamburger');
    
    if (menu.style.display === 'flex' && !menu.contains(event.target) && !hamburger.contains(event.target)) {
        menu.style.display = 'none';
    }
});
</script>

</body>
</html>
